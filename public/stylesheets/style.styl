
/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Colors
 */

blue = #4faadb
orange = #f57945
brown = #8f7065
green = #68b560
grey = #393d38

background-color = #faf9f0

h1 
  font-weight normal
  margin 0px 0px 30px 0px

h1 span
  font-size 30px

h2
  font-weight normal
  clear both

p 
  white-space pre 

a 
  color #a65555

a:hover
  color #792626

body
  font-family "Droid Serif", Georgia, Serif
  background-color background-color
  background-image: url("/images/bg.png") 
  color grey
  font-size 15px
  text-align center
  margin 0


header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color blue
  text-shadow 0px -1px 0px darken(blue, 60%)


.section 
  position relative
  width 100%

  .dribble 
    background orange

  .about
    background brown

  .contact
    background green

.container
  width 100%
  overflow hidden

.content
  width 70%
  margin: 0 auto
  padding 50px
  background-color: rgba(255,255,255,0.1)

  ul#portfolio
    width 750px
    margin 0 auto 
    list-style none
    overflow hidden

    li
      float left
      margin 20px 

    a 
      display block
      width 200px
      height 150px
      -moz-box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.1)
      -webkit-box-shadow 0px 0px 10px 0px rgba(0, 0, 0, 0.1)


footer
  
  background-color grey
  color #ffffff
  border-top 1px dotted #ccc
  padding 10px 
  font-size 13px
  margin-bottom 0px